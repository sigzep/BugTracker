@model IEnumerable<BugTracker.Models.RolesViewModel>

@{
    ViewBag.Title = "ListRoles";
}

<h2>ListRoles</h2>

<p>
    @Html.ActionLink("Create New", "CreateRoles")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRoles", new { id=item.RoleId }) |
            @Html.ActionLink("Delete", "DeleteRoles", new { id = item.RoleId })
        </td>
    </tr>
}

</table>
